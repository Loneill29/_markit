<h1> Topics <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %> </h1>

  <div class="row">
    <div class="col-md-12">
      <div class="media">
        <div class="media-body">
          <% @topics.each do |topic| %>
          <h4 class="media-heading">
             <%= link_to topic.title, topic %>
          </h4>
              <% topic.bookmarks.each do |bookmark| %>
              <ul>
                <li class="well-sm">
                  <%= bookmark.url %>
                </li>
              </ul>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
