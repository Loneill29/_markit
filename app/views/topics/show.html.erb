<h1 class="page-title topic-title">
   <%= @topic.title %>
   <span class="edit-delete">
     <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-default', id: "edit"%>
     <%= link_to @topic, method: :delete, class: 'btn btn-delete', data: { confirm: 'Are you sure you want to delete this topic?' } do %>
       <i class="far fa-trash-alt trashcan"></i>
     <% end %>
   </span>
</h1>

  <%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-default add-bookmark' %>

<div class="topics-index">
  <div class="full-width">
    <div class="img-row">
      <% @topic.bookmarks.each do |bookmark| %>
        <div class="col-md-4 image-cards">
          <div class="card">
            <div class="card-block">
              <div class="card-img">
                <%= link_to (image_tag bookmark.thumbnail, width: '200'), bookmark.url, target: '_blank' %>
              </div>
              <div class="buttons">
                <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
                <%= link_to bookmark, method: :delete, class: 'btn btn-delete', data: { confirm: 'Are you sure you want to delete this bookmark?' }  do %>
                  <i class="far fa-trash-alt trashcan"></i>
                <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
