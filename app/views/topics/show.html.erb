<h1 class="page-title">
   <%= @topic.title %>
   <span class="edit-delete">
     <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success', id: "edit"%>
     <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
   </span>
</h1>
<div class=" col-md-8 add-bookmark">
  <%= link_to "Add Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
</div>
  <div class="row" id="topics">
    <div class="col-md-8">
      <% @topic.bookmarks.each do |bookmark| %>
        <div class="media">
          <div class="col-sm-8">
            <div class="well">
              <%= image_tag bookmark.thumbnail, size: '100' %>
              <p><%= link_to bookmark.url, bookmark.url,  target: '_blank' %> </p>
              <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
